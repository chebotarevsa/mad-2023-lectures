<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bn_simple_recycle_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/simple_recycler_view"
        app:layout_constraintBottom_toTopOf="@+id/bn_modify_recycle_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/bn_modify_recycle_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/modify_recycler_view"
        app:layout_constraintBottom_toTopOf="@id/bn_diff_util_recycle_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_simple_recycle_view" />

    <Button
        android:id="@+id/bn_diff_util_recycle_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/diff_util_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_modify_recycle_view" />
</androidx.constraintlayout.widget.ConstraintLayout>