<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bn_the_most_naive_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/the_most_naive_list"
        app:layout_constraintBottom_toTopOf="@+id/bn_simple_naive_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/bn_simple_naive_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_naive_list"
        app:layout_constraintBottom_toTopOf="@+id/bn_simple_naive_list_with_delete"
        app:layout_constraintTop_toBottomOf="@+id/bn_the_most_naive_list" />

    <Button
        android:id="@+id/bn_simple_naive_list_with_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_naive_list_with_delete"
        app:layout_constraintBottom_toTopOf="@+id/bn_simple_naive_list_with_add"
        app:layout_constraintTop_toBottomOf="@+id/bn_simple_naive_list" />

    <Button
        android:id="@+id/bn_simple_naive_list_with_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_naive_list_with_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_simple_naive_list_with_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>

